<div class="row ml-1">
  {{#if data}}
    {{#each data.categories}}
      <div
        class="card card-for-view-hover m-4"
        style="width: 25rem;"
      >
        <img
          class="card-img-top"
          src="/category-images/{{this._id}}.jpg"
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
            <p style="padding: 25px;background-color: white;">{{this.description}}</p>
            <h2 class="p-2">â‚¹ {{this.amount}}</h2>
          <a
            class="btn btn-success"
            href="/admin/edit-doncategory/{{this._id}}/{{this.name}}"
          >Edit</a>
          <a
            href="#"
            class="btn btn-danger"
            onclick="deleteDonationCat('{{this._id}}',',{{this.name}}')"
          >Delete</a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <h3>No data available!</h3>
  {{/if}}
</div>

<style>
  .card-for-view-hover:hover{ border: 1px solid black; transform: scale(1.01); }
</style>