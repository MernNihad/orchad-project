<section class="mt-5">
    <div class="container">
        <div class="d-flex flex-row justify-content-between">
            <div class="">
                <form action='/admin/editQstntype' method="post" id="edittype">
                    <div class="row add-SubCatLeftUI  mt-4">
                        {{#if response }}
                        {{#if response.status}}
                        <div class="alert alert-success" role="alert">
                            {{response.message}}
                        </div>
                        {{else}}
                            <div class="alert alert-danger" role="alert">
                                {{response.message}}
                            </div>
                        {{/if}}
                        {{/if}}


                        <div class="col-12 m-1">
                            <label>Question <span class="text-danger">*</span></label>
                            {{!-- <input type="text" placeholder="Name" class="form-control" name="name" /> --}}
                            <textarea class="form-control" placeholder="Type here..."
                                style="padding-left: 10px;font-size:15px" name="question" id="" cols="30"
                                rows="5">{{Data.response.question}}</textarea>
                        </div>

                        <div class="col-12 m-1">
                            <input hidden value="{{Data.response._id}}" type="text" name="_category_id" class="form-control"
                                id="">
                        </div>


  



                        <div class="ml-3 Btn-ForCustomize margin-bottom-1rem">
                            <div class="">
                                <button type="submit" class="btn btn-success mt-3 wid-110">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="w-100  text-dark "> </div> {{!-- this designed class use this one ( addSubCat-RightPanel ) --}}
        </div>
    </div>
</section>