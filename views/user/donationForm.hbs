<div class="" style="background-color: #f1f1f1;">
<div class="container mt-5" style="padding:40px">
  {{#if MESSAGE}}
    {{#if MESSAGE.status}}
      <div class="alert alert-success" role="alert">
        {{MESSAGE.message}}
      </div>
    {{else}}
      <div class="alert alert-danger" role="alert">
        {{MESSAGE.message}}
      </div>
    {{/if}}
  {{/if}}
  <form
    style="display: flex;flex-direction: column;align-items: center;"
    action="/donationForm"
    method="post"
    id="donationDetails"
  >
    <input
      class="input-donation-form"
      type="text"
      name="fname"
      placeholder="First Name"
    />
    <input
      class="input-donation-form"
      type="text"
      name="lname"
      placeholder="Last Name"
    />
    <input
      class="input-donation-form"
      type="number"
      name="phone"
      placeholder="Phone Number"
    />
    <input
      class="input-donation-form"
      type="email"
      name="email"
      placeholder="E-Mail "
    />
    <input
      class="input-donation-form"
      type="text"
      name="address"
      placeholder="Street Address"
    />
    <input
      class="input-donation-form"
      type="text"
      name="state"
      placeholder="State"
    />
    <input class="input-donation-form" type="text" name="userID" hidden value="{{id}}" />
    <input
      class="mt-1 input-donation-submit-form"
      type="submit"
      value="Submit"
    />
  
  </form>
</div>

  
</div>

<style>
  .input-donation-form{ text-align: center; padding: 9px; margin: 5px; }
  .input-donation-submit-form{ padding: 8px 60px; color: white; font-size: 19px;
  border: 1px solid #000000cf; border-radius: 4px;width: 230px;
    background-color: black; }
</style>