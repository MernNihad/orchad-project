<script>
  function myHome_Class_Remove_Function() {
    var element =
      document.getElementById("container"); element.classList.remove("container");
  }
  function myHome_Responsive_Function(x) {
    if (x.matches) { // If media query
  matches myHome_Class_Remove_Function()
    }
  } var x =
    window.matchMedia("(max-width: 600px)") myHome_Responsive_Function(x) // Call
  listener function at run time x.addListener(myHome_Responsive_Function) //
  Attach listener function on state changes // Get the button let mybutton =
  document.getElementById("home_btn"); // When the user scrolls down 20px from
  the top of the document, show the button window.onscroll = function () { scrollFunction() }; function scrollFunction() {
    if (document.body.scrollTop >
      20 || document.documentElement.scrollTop > 20) {
        mybutton.style.display =
        "block";
    } else { mybutton.style.display = "none"; }
  } // When the user clicks
  on the button, scroll to the top of the document function topFunction() {
    document.body.scrollTop = 0; document.documentElement.scrollTop = 0;
  }

</script>

