<section id="home-section" style="background-color: #f1f1f1;">
  <div class="row home-row ml-1" id="results">
    {{#if response}}
    {{#each response}}
    <div class="container mt-4">
      <div class="row">
        <div class="m-1" onclick="url('/getCollection/orphanage/{{this._id}}')" style="width: 330px;">
          <img src="/category-images/{{this._id}}.jpg" style="height: 200px;width: 330px;" alt="">
          <h3 class="mt-3" style="text-align: center;">{{this.name}}</h3>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <h3>loading...</h3>
  {{/if}}
  </div>
</section>